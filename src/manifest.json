{
  "manifest_version": 2,
  "name": "YoutubeAutoSkipper",
  "description": "I will see advertisements, but let me skip quickly.",
  "version": "2021.8.3",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "page_action": {
    "default_icon": "icons/16.png",
    "default_title": "YoutubeAutoSkipper"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "https://www.youtube.com/",
    "https://www.youtube.com/*/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://www.youtube.com/",
      "https://www.youtube.com/*"
    ],
    "js": ["scripts/content_script.js", "scripts/viewed_black.js", "scripts/black_button.js"],
    "run_at": "document_idle",
    "all_frames": true
  }]
}
